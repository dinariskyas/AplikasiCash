<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TPemasukanActivity"
    android:orientation="vertical"
    android:background="#F4F6F8">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_bg"
        android:layout_marginTop="-188dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Pemasukan "
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ic_bg"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Tanggal:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editDatePemasukan"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal"
                    android:ems="10"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/ic_kalender_masuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_icon_calendar" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/editNominalPemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Nominal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/editTextKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Keterangan" />

            <Button
                android:id="@+id/btnSimpanPemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/sea_green"
                android:text="Simpan" />

            <Button
                android:id="@+id/btnKembaliPemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/salmon"
                android:text="Kembali" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>